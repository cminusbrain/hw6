#include <iostream>
#include <iomanip>
#include <cmath>
#include <ctime>


int main()
{
    int n;
    double a;
    int sum = 0;
    std::cin >> a >> n;
    double product = 1;
    for (int i = 1; i < n; i++)
    {
        product *= a;
        sum += product;
    }
    std::cout << sum + 1;
    return 0;
}
